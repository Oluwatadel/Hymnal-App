<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hymn_Book.Views.Page.AboutPage"
             Title="AboutPage">
    <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">

                <Image Source="app_icon.png"
                   HeightRequest="120"
                   HorizontalOptions="Center" />

                <Label Text="Hymn Book App"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#001F54" />

                <Label Text="Version 1.0.0"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="#666" />

                <BoxView HeightRequest="1" Color="#CCC" />

                <Label Text="This app provides a rich collection of hymns for worship and personal devotion. You can browse, search, and view hymn lyrics with ease."
                   FontSize="16"
                   TextColor="#333"
                   LineBreakMode="WordWrap" />

                <Label Text="Developed by:"
                   FontSize="14"
                   FontAttributes="Bold"
                   TextColor="#555" />

                <Label Text="Airis Technovation"
                   FontSize="14"
                   TextColor="#555" />

                <Label Text="Contact: oluwatadel12@gmail.com"
                   FontSize="14"
                   TextColor="#555" />

            </VerticalStackLayout>
        </ScrollView>
</ContentPage>